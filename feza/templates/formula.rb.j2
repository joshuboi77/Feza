class {{ formula_name }} < Formula
  desc "{{ desc }}"
  homepage "{{ homepage }}"
  version "{{ version }}"

{% if python_package %}
  # Python package - install via pip so wrapper script can import it
  depends_on "python@3.11"

{% endif %}
  on_macos do
    if Hardware::CPU.arm?
      url "{{ url_by('macos-arm64') }}"
      sha256 "{{ sha_by('macos-arm64') }}"
    else
      url "{{ url_by('macos-amd64') }}"
      sha256 "{{ sha_by('macos-amd64') }}"
    end
  end

  on_linux do
    url "{{ url_by('linux-amd64') }}"
    sha256 "{{ sha_by('linux-amd64') }}"
  end

  def install
    # Install wrapper script from bin/ directory in tarball
    bin.install "bin/{{ name }}" => "{{ name }}"
{% if python_package %}
    # Install Python package so wrapper script can import it
    # The wrapper script does "from {{ python_package }}.main import main" so package must be installed
    # Package source is included in the tarball, install from extracted source
    python3 = "python3.11"
    if File.exist?("pyproject.toml")
      # Install from pyproject.toml in the extracted tarball
      system python3, "-m", "pip", "install", "--prefix", prefix, "--no-build-isolation", "."
    elsif File.exist?("setup.py")
      # Fallback for setup.py
      system python3, "-m", "pip", "install", "--prefix", prefix, "--no-build-isolation", "."
    else
      # Try installing package name from bundled source
      package_dir = "{{ python_package }}"
      if Dir.exist?(package_dir)
        # Create a minimal setup.py if needed
        File.write("setup.py", "from setuptools import setup; setup(name='{{ python_package }}', version='{{ version }}')")
        system python3, "-m", "pip", "install", "--prefix", prefix, "--no-build-isolation", "."
      end
    end
{% endif %}
  end

  test do
    assert_match "{{ version }}", shell_output("#{bin}/{{ name }} --version")
  end
end

